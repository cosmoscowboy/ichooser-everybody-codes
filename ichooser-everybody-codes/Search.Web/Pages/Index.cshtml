@page
@model IndexModel
@{
    ViewData["Title"] = "Infi | Security cameras Utrecht";
}

<h1>Security cameras Utrecht</h1>
<div id="map"></div>
<div id="source">
    source:
    <a href="https://data.overheid.nl/dataset/camera-s">https://data.overheid.nl/dataset/camera-s</a>
</div>
<main>
    <table id="cameraTableContainer">
        <tbody>
            <tr>
                <td>
                    <table id="column3">
                        <thead>
                            <tr>
                                <th colspan="4">Cameras 3</th>
                            </tr>
                            <tr>
                                <th>Number</th>
                                <th>Name</th>
                                <th>Latitude</th>
                                <th>Longitude</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.CameraLocationsDivided?.DivisibleByThree != null)
                            {
                                foreach (var cameraLocation in Model.CameraLocationsDivided.DivisibleByThree)
                                {
                                    <tr>
                                        <th>@cameraLocation.Number</th>
                                        <th>@cameraLocation.Name</th>
                                        <th>@cameraLocation.Latitude</th>
                                        <th>@cameraLocation.Longitude</th>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </td>
                <td>
                    <table id="column5">
                        <thead>
                            <tr>
                                <th colspan="4">Cameras 5</th>
                            </tr>
                            <tr>
                                <th>Number</th>
                                <th>Name</th>
                                <th>Latitude</th>
                                <th>Longitude</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.CameraLocationsDivided?.DivisibleByFive != null)
                            {
                                foreach (var cameraLocation in Model.CameraLocationsDivided.DivisibleByFive)
                                {
                                    <tr>
                                        <th>@cameraLocation.Number</th>
                                        <th>@cameraLocation.Name</th>
                                        <th>@cameraLocation.Latitude</th>
                                        <th>@cameraLocation.Longitude</th>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </td>
                <td>
                    <table id="column15">
                        <thead>
                            <tr>
                                <th colspan="4">Cameras 3 &amp; 5</th>
                            </tr>
                            <tr>
                                <th>Number</th>
                                <th>Name</th>
                                <th>Latitude</th>
                                <th>Longitude</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.CameraLocationsDivided?.DivisibleByThreeAndFive != null)
                            {
                                foreach (var cameraLocation in Model.CameraLocationsDivided.DivisibleByThreeAndFive)
                                {
                                    <tr>
                                        <th>@cameraLocation.Number</th>
                                        <th>@cameraLocation.Name</th>
                                        <th>@cameraLocation.Latitude</th>
                                        <th>@cameraLocation.Longitude</th>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </td>
                <td>
                    <table id="columnOther">
                        <thead>
                            <tr>
                                <th colspan="4">Cameras Overig</th>
                            </tr>
                            <tr>
                                <th>Number</th>
                                <th>Name</th>
                                <th>Latitude</th>
                                <th>Longitude</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.CameraLocationsDivided?.DivisibleNotByThreeAndFive != null)
                            {
                                foreach (var cameraLocation in Model.CameraLocationsDivided.DivisibleNotByThreeAndFive)
                                {
                                    <tr>
                                        <th>@cameraLocation.Number</th>
                                        <th>@cameraLocation.Name</th>
                                        <th>@cameraLocation.Latitude</th>
                                        <th>@cameraLocation.Longitude</th>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </td>
            </tr>
        </tbody>
    </table>
</main>

